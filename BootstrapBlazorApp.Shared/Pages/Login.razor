@page "/login/{returnurl?}"
@page "/login"

@* @layout LoginLayout *@

<ValidateForm class="form col-sm-4 align-self-center" Model="@LoginDto" OnValidSubmit="OnValidSubmit">
    <div class="container">
        <div class="form-group col-12">
            <BootstrapInput @bind-Value="@LoginDto.Account"></BootstrapInput>
        </div>
        <div class="form-group col-12">
            <BootstrapInput @bind-Value="@LoginDto.Password"></BootstrapInput>
        </div>
        <div class="form-group col-12">
            <NavLink href="/register">
                没有账号？
            </NavLink>
            <Button ButtonType="ButtonType.Submit" Text="登录" Color="Color.Primary"></Button>
        </div>
    </div>
</ValidateForm>